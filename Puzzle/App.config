<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="System.Windows.Forms.ApplicationConfigurationSection">
      <section name="add" type="System.Configuration.NameValueSectionHandler" />
    </sectionGroup>
  </configSections>
  
  <System.Windows.Forms.ApplicationConfigurationSection>
    <add key="DpiAwareness" value="PerMonitorV2" />
    <add key="EnableWindowsFormsHighDpiAutoResizing" value="true" />
  </System.Windows.Forms.ApplicationConfigurationSection>
  
  <runtime>
    <AppContextSwitchOverrides value="Switch.System.Windows.Forms.ScaleTopLevelFormMinMaxSizeForDpi=true" />
  </runtime>
</configuration>